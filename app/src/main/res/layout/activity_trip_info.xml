<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TripInfoActivity">

    <TextView
            android:text="TextView"
            android:layout_width="231dp"
            android:layout_height="39dp"
            android:id="@+id/textNameTrip"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

    <TextView
            android:text="TextView"
            android:layout_width="166dp"
            android:layout_height="59dp"
            android:id="@+id/textStartPlace"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="184dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textNameTrip"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textStyle="bold"/>

    <ImageView
            android:layout_width="99dp"
            android:layout_height="138dp"
            app:srcCompat="@drawable/app_logo1"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textNameTrip"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="164dp"
            android:layout_height="67dp"
            android:id="@+id/textDestinationPlace"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textStartPlace"
            android:textStyle="bold"/>

    <TextView
            android:text="TextView"
            android:layout_width="279dp"
            android:layout_height="47dp"
            android:id="@+id/textTripTiming"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textDestinationPlace"
            android:textStyle="bold"/>

    <TextView
            android:text="TextView"
            android:layout_width="175dp"
            android:layout_height="46dp"
            android:id="@+id/textAvailableSets"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textTripTiming"
            app:layout_constraintHorizontal_bias="0.502"
            android:textStyle="bold"
            android:visibility="gone"/>

    <Button
            android:text="Book Set"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/editAvailableSets"
            android:onClick="bookSet"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberSigned"
            android:ems="10"
            android:id="@+id/editAvailableSets"
            tools:text="1"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            android:text="You Sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textAvailableSets"
            app:layout_constraintHorizontal_bias="0.248"/>
</android.support.constraint.ConstraintLayout>
